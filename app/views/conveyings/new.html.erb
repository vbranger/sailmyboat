<div class="container pt-5 col-6">
  <h1 class="text-center mb-5">Create a new conveying</h1>

  <%= simple_form_for @conveying do |f| %>
    <%= f.input :boat_name%>
    <%= f.input :boat_type, collection: Conveying::BOATTYPES %>
    <div class="form-row">
      <div class="col-6 form-group">
    <%= f.input :start_location%>
      </div>
      <div class="col-6 form-group">
    <%= f.input :arrival_location%>
      </div>
    </div>
    <div class="form-row">
      <div class="col-6 form-group">
    <%= f.input :start_date, as: :date %>
    </div>
      <div class="col-6 form-group">
    <%= f.input :arrival_date, as: :date %>
      </div>
    </div>
    <%= f.input :capacity, collection: Conveying::CAPACITIES%>
    <%= f.input :photos, as: :file, input_html: { multiple: true }%>
    <%= f.button :submit, "Submit", :class => "btn btn-primary w-100" %>
  <% end %>
</div>
